{
	"compilerOptions": {
		"module": "system",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"outDir": "./dist/"
	},
	"typeRoots": [
		"node_modules/@types"
	],
	"include": [
		"app/**/*",
		"framework/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
